using System;

namespace HierarchicalInheritance
{
    class SingleInheritance
    {
        class RishabhSoftware
        {
            public void Train()
            {
                Console.WriteLine("Rishabh Software Trains");
            }
        }
        class Trainee : RishabhSoftware
        {
            public void Learning()
            {
                Console.WriteLine("Trainees are Learning");
            }
        }
        class GaganSir : RishabhSoftware
        {
            public void Trainer()
            {
                Console.WriteLine("Gagan Sir is a Trainer");
            }
        }
        static void Main()
        {
            RishabhSoftware d = new RishabhSoftware();
            //d.Train();
            GaganSir s = new GaganSir();
            s.Train();
            s.Trainer();
            Console.ReadKey();
        }
    }
}
