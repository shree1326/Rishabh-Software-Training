using System;

namespace Unsafe
{
    class Program
    {
        static void Main(string[] args)
        {
            unsafe
            {
                int var = 20;
                int* p = &var;

                System.Console.WriteLine("Data is: {0}", var);
                System.Console.WriteLine("Address is: {0}", (int)p);
                System.Console.ReadKey();
            }
        }
    }
}
