using System;  
  public class SumOfNumber  
   {  
     public static void Main(string[] args)  
      {  
       int  a,b,sum=0;         
       System.Console.Write("Enter a number: ");      
       a= int.Parse(Console.ReadLine());     
       while(a>0)      
       {      
        b=a%10;      
        sum=sum+b;      
        a=a/10;      
       }      
       System.Console.Write("Sum is= "+sum);       
     }  
  }  
