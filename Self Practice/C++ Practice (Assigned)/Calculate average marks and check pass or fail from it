#include<iostream>
using namespace std;
int main()
{
    int i, n,marks;
    float tot, arr[10], sum=0, avg, perc;
    cout<<"Enter Number of Subjects: ";
    cin>>n;
    cout<<"\nEnter Marks obtained in "<<n<<" Subjects: ";
    for(i=0; i<n; i++)
    {
        cin>>arr[i];
        sum = sum+arr[i];
    }
    tot = tot*n;
    avg = sum/n;
    cout<<"\nAverage Marks = "<<avg;
    cout<<endl;
    if(avg>=50)
 {
 cout<<"Congratulations! You have cleared the exam. "<<endl;
 }
 if(avg<50 )
 {
 cout<<"Sorry! You have not cleared the exam."<<endl;
    return 0;
 }
}
