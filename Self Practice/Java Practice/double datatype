public class DoubleDataType
{
    public static void main(String args[])
    {
        double Double1, Double2, answer;
        Double1 = 1.5;
        Double2 = 1.5;
        answer = Double1 + Double2;
        System.out.println("Number 1: " +Double1);
        System.out.println("Number 2: " +Double2);
        System.out.println("Number 1 + Number 2: " +answer);
    }
}
